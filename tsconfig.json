{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["es6", "es2017", "dom"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
